(add-to-list 'load-path "~/.emacs.d/cscope")
(setq exec-path (cons "/usr/local/bin/" exec-path))
(require 'xcscope)
(add-hook 'c-mode-common-hook
	  '(lambda()
	     (require 'xcscope)))
(setq cscope-do-not-update-database t)
(define-key global-map (kbd "C-c f1") 'cscope-set-initial-directory)
(define-key global-map (kbd "C-c f2") 'cscope-unset-initial-directory)
(define-key global-map (kbd "C-c f3") 'cscope-find-this-symbol)
(define-key global-map (kbd "C-c f4") 'cscope-find-global-definition)
(define-key global-map (kbd "C-c f5") 'cscope-find-global-definition-no-prompting)
(define-key global-map (kbd "C-c f6") 'cscope-pop-mark)
(define-key global-map (kbd "C-c f7") 'cscope-next-symbol)
(define-key global-map (kbd "C-c f8") 'cscope-next-file)
(define-key global-map (kbd "C-c f9") 'cscope-prev-symbol)
(define-key global-map (kbd "C-c f10") 'cscope-prev-file)
(define-key global-map (kbd "C-c f11") 'cscope-display-buffer)
(define-key global-map (kbd "C-c f12") 'cscope-display-buffer-toggle)

(provide 'init-cscope-mode)
